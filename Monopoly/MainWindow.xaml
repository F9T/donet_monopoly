<mah:MetroWindow x:Class="Monopoly.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Monopoly.Views"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d" Height="800" Width="800" WindowState="Maximized"
        Title="Monopoly" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Menu IsMainMenu="True" Grid.Row="0">
            <MenuItem Header="Commencer le jeu">
                <MenuItem Header="New" Command="{Binding NewGameCommand}" InputGestureText="Ctrl+N" />
                <MenuItem Header="Quit" InputGestureText="Alt+F4"/>
            </MenuItem>
        </Menu>
        <views:PlatterControlView Grid.Row="1" CaseMinHeight="90" CaseMinWidth="90" FontSize="16" FontFamily="Arial Narrow" FontWeight="Bold" />
    </Grid>
</mah:MetroWindow>

