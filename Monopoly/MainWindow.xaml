<Window x:Class="Monopoly.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Monopoly.Views"
        mc:Ignorable="d" Height="800" Width="800"
        Title="Monopoly" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Menu IsMainMenu="True" Grid.Row="0">
            <MenuItem Header="Game">
                <MenuItem Header="New" />
            </MenuItem>
        </Menu>
        <views:PlatterControlView Grid.Row="1" CaseMinHeight="100" CaseMinWidth="100" />
    </Grid>
</Window>
